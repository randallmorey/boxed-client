

{{#link-to 'items.new' class="btn btn-info pull-right"}}{{t 'actions.new'}}{{/link-to}}

<form class="form-inline">
  <label class="control-label">
    {{input name="search" value=search placeholder=labels.search class="form-control"}}
  </label>
  <label>
    <div class="btn btn-right btn-info">{{t 'actions.scan'}}</div>
    <div class="hide">{{file-input type='file' file=file}}</div>
  </label>
</form>

<table class="table table-condensed">
  <thead>
    <tr>
      <th class="type-number">{{t 'fields.quantity'}}</th>
      <th class="type-string">{{t 'fields.name'}}</th>
      <th class="type-string type-category">{{t 'resources.box'}}</th>
      <th class="type-number">{{t 'fields.shortId'}}</th>
    </tr>
  </thead>
  <tbody>
    {{#each group in groups}}
      {{#each item in group.items}}
        <tr>
          <td class="type-number">
            {{#link-to 'item.edit' item}}
              {{item.quantity}}
            {{/link-to}}
          </td>
          <td class="type-string">
            {{#link-to 'item.edit' item}}
              {{item.name}}
            {{/link-to}}
          </td>
          <td class="type-string type-category">
            {{#link-to 'item.edit' item}}
              {{item.box.name}}
              {{#unless item.box.name}}
                {{t 'unassigned'}}
              {{/unless}}
            {{/link-to}}
          </td>
          <td class="type-number">
            {{#link-to 'item.edit' item}}
              {{item.box.shortId}}
            {{/link-to}}
          </td>
        </tr>
      {{/each}}
    {{/each}}
  </tbody>
</table>
