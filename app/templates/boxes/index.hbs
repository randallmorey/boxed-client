{{#link-to 'boxes.new' class="btn btn-info pull-right"}}{{t 'actions.new'}}{{/link-to}}

<form class="form-inline">
  <label class="control-label">
    {{input name="search" value=search placeholder=labels.search class="form-control"}}
  </label>
  <label>
    <div class="btn btn-right btn-info">{{t 'actions.scan'}}</div>
    <div class="hide">{{file-input type='file' file=file}}</div>
  </label>
</form>

<table class="table table-condensed">
  <thead>
    <tr>
      <th class="type-number">{{t 'fields.shortId'}}</th>
      <th class="type-string">{{t 'fields.name'}}</th>
    </tr>
  </thead>
  <tbody>
    {{#each box in filtered}}
      <tr>
        <td class="type-number">
          {{#link-to 'box.edit' box}}
            {{box.shortId}}
          {{/link-to}}
        </td>
        <td class="type-string">
          {{#link-to 'box.edit' box}}
            {{box.name}}
          {{/link-to}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
