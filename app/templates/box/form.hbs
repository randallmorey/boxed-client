<form class="form-horizontal">
  {{#unless model.isNew}}
    <div class="form-group">
      <label for="shortId" class="col-sm-2 control-label">{{t 'fields.shortId'}}</label>
      <div class="col-sm-10">
        {{input type="text" name="shortId" id="shortId" disabled=true class="form-control" value=model.shortId}}
      </div>
    </div>
  
    <div class="form-group">
      <label for="id" class="col-sm-2 control-label">{{t 'fields.id'}}</label>
      <div class="col-sm-10">
        {{input type="text" name="id" id="id" disabled=true class="form-control" value=model.id}}
      </div>
    </div>
  {{/unless}}
  
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">{{t 'fields.name'}}</label>
    <div class="col-sm-10">
      {{input type="text" name="name" id="name" class="form-control" value=model.name}}
    </div>
  </div>
  
  <div class="form-group">
    <label for="description" class="col-sm-2 control-label">{{t 'fields.description'}}</label>
    <div class="col-sm-10">
      {{textarea name="description" id="description" class="form-control" rows=3 value=model.description}}
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      {{#if model.isDirty}}
        <button type="submit" class="btn btn-primary" {{action 'save'}}>{{t 'actions.save'}}</button>
      {{/if}}
      {{#unless model.isNew}}
        {{#if model.isDirty}}
          <a class="btn btn-link" {{action 'cancel'}}>{{t 'actions.cancel'}}</a>
        {{/if}}
      {{/unless}}
    </div>
  </div>
</form>
